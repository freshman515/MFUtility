<dialogs:BaseDialog x:Class="Test1.HintDialog"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:local="clr-namespace:Test1"
                    xmlns:dialogs="clr-namespace:MFUtility.Dialogs;assembly=MFUtility"
                    Title="提示" Width="340" Height="180"
                    Background="White" WindowStyle="None">
    <Border CornerRadius="12" Background="SkyBlue">
        <Grid Margin="20">
            <TextBlock Text="{Binding}" FontSize="16" Foreground="Black" />
            <Button Content="确定" Click="OnOk" HorizontalAlignment="Center" Margin="0,20,0,0" />
        </Grid>
    </Border>
</dialogs:BaseDialog>