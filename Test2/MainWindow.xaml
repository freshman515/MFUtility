<Window x:Class="Test2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test2"
        xmlns:mf="https://schemas.mfutility.dev/wpf"
        xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:MainViewModel />
    </Window.DataContext>
    <mf:Grid Columns="* *" ColumnSpacing="10">
        <mf:StackPanel MarginTop="10">
            <Button Command="{Binding Test1Command}" Content="Test1" />
        </mf:StackPanel>
        <TextBlock Text="Hello" mf:ClickHelper.ClickCommand="{Binding Test1Command}" />
    </mf:Grid>
</Window>