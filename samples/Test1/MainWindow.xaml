    <ScrollViewer>
        <mf:StackPanel Spacing="20">
            <mf:Grid Columns="auto,auto"
                     Height="80"
                     Spacing="10">
                <Border mf:ClickHelper.ClickCommand="{Binding ShowCommand}" mf:ClickHelper.CommandParameter="123"
                        Background="Aqua">
                    <TextBlock>Hello</TextBlock>
                </Border>
                <Border Background="Orange" mf:ClickHelper.DoubleClickCommand="{Binding ConnectCommand}"
                        mf:ClickHelper.CommandParameter="888">
                    <TextBlock>World</TextBlock>
                </Border>
                <Border mf:ClickHelper.ClickCommand="{Binding TestHttpCommand}" Background="Brown">
                    <TextBlock>Hello</TextBlock>
                </Border>
                <Border Background="Green"
                        mf:ClickHelper.ClickCommand="{Binding ShowCommand}"
                        mf:ClickHelper.ClickDelay="300" mf:ClickHelper.CommandParameter="789">
                    <TextBlock>Hello</TextBlock>
                </Border>
            </mf:Grid>
            <TextBox
                mf:TextboxHelper.PlaceholderOpacity="0.5"
                FontSize="16"
                mf:TextboxHelper.Placeholder="123" Height="40" mf:TextboxHelper.PlaceholderBrush="Gray"></TextBox>
            <mf:TextBox Text="Hello" Width="100" Height="30" />
